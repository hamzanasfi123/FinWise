<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/debtIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="ðŸ’¸"
        android:textSize="18sp"
        android:background="#FFECB3"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/debtPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="16sp"
            android:textColor="#333333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/debtDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent sharing"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/debtDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due: Nov 20, 2023"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="2dp" />
        <ImageView
            android:id="@+id/btnCalendar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_calendar_add"
            android:contentDescription="Add to calendar"
            android:padding="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/debtAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$200.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#F44336" />

        <TextView
            android:id="@+id/debtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNPAID"
            android:textSize="12sp"
            android:textColor="#F44336"
            android:layout_marginTop="4dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:background="#FFEBEE" />

    </LinearLayout>

</LinearLayout>